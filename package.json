{
    "name": "vue-component-tips",
    "displayName": "vue-component-tips",
    "description": "vue 组件提示",
    "version": "0.1.6",
    "publisher": "zrrz",
    "author": {
        "name": "zrrz",
        "email": "247076126@qq.com"
    },
    "keywords": [
        "vue",
        "hint",
        "component",
        "tips",
        "uni"
    ],
    "repository": {
        "url": "https://github.com/so11y/vue-component-tips"
    },
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "uniapp扫描组件提示",
            "properties": {
                "zrrz.projectName": {
                    "type": "string",
                    "default": "saas",
                    "description": "你的项目根文件名称"
                },
                "zrrz.configList": {
                    "type": "array",
                    "description": "扫描文件配置",
                    "default": [
                        {
                            "path": "/src/common/components/**/*.vue",
                            "alias": "",
                            "sub": false
                        },
                        {
                            "path": "/src/components/**/*.vue",
                            "alias": "gc-",
                            "sub": false
                        },
                        {
                            "path": "/src/*(goods|guest|home|live|shop|single-page|user)/components/**/*.vue",
                            "alias": "sub-",
                            "sub": true
                        }
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "@babel/core": "^7.15.5",
        "@babel/generator": "^7.15.4",
        "glob": "^7.1.7",
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "@types/babel__core": "^7.1.16",
        "@types/glob": "^7.1.3",
        "@types/lodash": "^4.14.173",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.59.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    }
}